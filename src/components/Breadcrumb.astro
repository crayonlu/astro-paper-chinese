---
// Remove current url path and remove trailing slash if exists
const currentUrlPath = Astro.url.pathname.replace(/\/+$/, "");

// Get url array from path
// eg: /tags/tailwindcss => ['tags', 'tailwindcss']
const breadcrumbList = currentUrlPath.split("/").slice(1);

// Path to Chinese translation mapping
const pathTranslations: Record<string, string> = {
  tags: "标签",
  posts: "文章",
  archives: "归档",
  search: "搜索",
  about: "关于",
};

// Create breadcrumb items with original path and translated text
interface BreadcrumbItem {
  original: string;
  text: string;
  href: string;
}

let breadcrumbItems: BreadcrumbItem[] = breadcrumbList.map((segment, index) => {
  const translated = pathTranslations[segment.toLowerCase()] || segment;
  // Build href from all segments up to current index
  const href = "/" + breadcrumbList.slice(0, index + 1).join("/") + "/";
  return {
    original: segment,
    text: translated,
    href: href,
  };
});

// if breadcrumb is Home > Posts > 1 <etc>
// replace Posts with Posts (page number)
if (breadcrumbList[0] === "posts") {
  const pageNum = breadcrumbList[1] || "1";
  breadcrumbItems.splice(0, 2, {
    original: breadcrumbList[0],
    text: `文章 (第 ${pageNum} 页)`,
    href: `/posts/${pageNum}/`,
  });
}

// if breadcrumb is Home > Tags > [tag] > [page] <etc>
// replace [tag] > [page] with [tag] (page number)
if (breadcrumbList[0] === "tags" && !isNaN(Number(breadcrumbList[2]))) {
  const tag = breadcrumbList[1];
  const pageNum = breadcrumbList[2];
  breadcrumbItems.splice(1, 3, {
    original: tag,
    text: `${tag} ${Number(pageNum) === 1 ? "" : "(第 " + pageNum + " 页)"}`,
    href: `/tags/${tag}/${pageNum}/`,
  });
}
---

<nav class="mx-auto mt-8 mb-1 w-full max-w-app px-4" aria-label="breadcrumb">
  <ul
    class="font-light [&>li]:inline [&>li:not(:last-child)>a]:hover:opacity-100"
  >
    <li>
      <a href="/" class="opacity-80">首页</a>
      <span aria-hidden="true" class="opacity-80">&raquo;</span>
    </li>
    {
      breadcrumbItems.map((item, index) =>
        index + 1 === breadcrumbItems.length ? (
          <li>
            <span
              class:list={["capitalize opacity-75", { lowercase: index > 0 }]}
              aria-current="page"
            >
              {/* make the last part lowercase in Home > Tags > some-tag */}
              {decodeURIComponent(item.text)}
            </span>
          </li>
        ) : (
          <li>
            <a href={item.href} class="capitalize opacity-70">
              {item.text}
            </a>
            <span aria-hidden="true">&raquo;</span>
          </li>
        )
      )
    }
  </ul>
</nav>
